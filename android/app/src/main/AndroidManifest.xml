
    <manifestxmlns:android="http://schemas.android.com/apk/res/android"
    <application
        android:name="${applicationName}"
        android:label="visit_sri_lanka_travel_guide_app"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme">              <!-- ✅  App-wide Material theme -->

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/AppTheme"           <!-- ✅  Activity uses same theme -->
            android:configChanges="orientation|keyboardHidden|keyboard
                                   |screenSize|smallestScreenSize|locale
                                   |layoutDirection|fontScale
                                   |screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- If you want a different splash theme keep this, but point it to AppTheme too -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/AppTheme" />  <!-- ✅  must inherit MaterialComponents -->

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data android:name="flutterEmbedding" android:value="2" />
    </application>
</manifest>
